{% extends 'layout.html.twig' %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/showcase.css">{% endblock %}
{% block header %}
{% endblock %}
{% block content %}

    {# ---------------------------- FIRST CAROUSSEL FOR FAVORIS MANGAS ------------------------------------ #}

    <h1 class="text-center mb-5 mt-5 pt-5 pb-3">FAVORIS</h1>

    <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
    <div class="carousel-inner ">
    {% for manga in mangas %} 
        <div class="carousel-item active ">
            <img src="{{ manga.image }}" class="d-block img-fluid" alt="...">
        </div>
    {% endfor %}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon buton_pink" aria-hidden="true"></span>
        <span class="visually-hidden ">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon buton_pink" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>

    <hr>
    {# ---------------------------- SECOND CAROUSSEL FOR ALL MANGAS ------------------------------------ #}

    <h1 class="text-center mb-5 mt-5 pt-5 pb-5">MANGAS</h1>

    <div id="carouselExampleControlsMangas" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
    {% for mangasRand in mangasRands %} 
        <div class="carousel-item active ">
            <img src="{{ mangasRand.image }}" class="d-block img-fluid" alt="...">
        </div>
    {% endfor %}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsMangas" data-bs-slide="prev">
        <span class="carousel-control-prev-icon buton_pink" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsMangas" data-bs-slide="next">
        <span class="carousel-control-next-icon buton_pink" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>

    {# ---------------------------- BUTTONS SELECTION CATEGORY MANGAS ------------------------------------ #}
                                
    <div class="container mt-5 mb-5 ">
        <div class="text-center row" role="group" aria-label="Basic radio toggle ">
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" onclick="change_loc('/manga/list?category=')">
                <label class="btn buton_pink" for="btnradio1">VOIR TOUT</label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" onclick="change_loc('/manga/list?category=shonen')">
                <label class="btn buton_pink" for="btnradio2">SHONENS</label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" onclick="change_loc('/manga/list?category=shojo')">
                <label class="btn buton_pink" for="btnradio3">SHOJOS</label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off" onclick="change_loc('/manga/list?category=seinen')">
                <label class="btn buton_pink" for="btnradio4">SEINENS</label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio5" autocomplete="off" onclick="change_loc('/manga/list?category=josei')">
                <label class="btn buton_pink" for="btnradio5">JOSEIS</label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5">
                 <input type="radio" class="btn-check" name="btnradio" id="btnradio6" autocomplete="off" onclick="change_loc('/manga/list?category=kodomo')">
                <label class="btn buton_pink" for="btnradio6">KODOMOS</label>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}<script src="/assets/js/showcase.js"></script>{% endblock %}