{% extends 'layout.html.twig' %}

{% block stylesheet %} <link rel="stylesheet" href="/assets/css/list.css">{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5 ">
        <div class="text-center row" id="radio_group" role="group" aria-label="Basic radio toggle ">
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked >
                <label  class="btn buton_pink" id="label_all" for="btnradio1"><a href="/manga/list?category=">VOIR TOUT</a></label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                <input type="radio" class="btn-check " name="btnradio" id="btnradio2" autocomplete="off" >
                <label class="btn buton_pink" for="btnradio2" ><a href="/manga/list?category=shonen">SHONENS</a></label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" >
                <label class="btn buton_pink" for="btnradio3" ><a href="/manga/list?category=shojo">SHOJOS</a></label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off" >
                <label class="btn buton_pink" for="btnradio4" ><a href="/manga/list?category=seinen">SEINENS</a></label>
            </div>
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio5" autocomplete="off">
               <label class="btn buton_pink" for="btnradio5" > <a href="/manga/list?category=josei">JOSEIS</a></label>
            </div> 
            <div class="col-xl-2 col-md-3 col-sm-4 col-xs-5 mt-3">
                 <input type="radio" class="btn-check" name="btnradio" id="btnradio6" autocomplete="off" >
                <label class="btn buton_pink" for="btnradio6"><a href="/manga/list?category=kodomo">KODOMOS</a></label>
            </div>
        </div>
    </div>
    
    <div class="container ">
        <div class="row justify-content-around">
            {% for manga in mangas %}
                <div class="col-5 card mb-3 mr-3 pr-3" style="max-width: 500px;">
                    <div class="row g-0 text-center ">
                        <div class="col-md-3">
                            <img src="{{manga.image}}" class="img-fluid rounded-start" >
                        </div>
                        <div class="col-md-7">
                            <div class="card-body m-0">
                                <h4 class="card-title">{{manga.title}}</h4>
                                <h5 class="card-title">{{manga.author}}</h5>
                                <h6 class="card-title">{{ manga.release_at|date("d/m/Y") }}</h6>
                                <p id="manga_{{manga.id}}" class="card-text collapse">{{manga.description}}</p>
                                <p>
                                    <button class="btn button_pink" type="button" data-bs-toggle="collapse" data-bs-target="#manga_{{manga.id}}" aria-expanded="false" >
                                    Voir plus
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
